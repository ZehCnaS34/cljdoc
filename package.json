{
  "name": "cljdoc",
  "type": "module",
  "scripts": {
    "format": "prettier --write 'js/**/*.{js,jsx,ts,tsx}'",
    "lint": "prettier --check 'js/**/*.{js,jsx,ts,tsx}'",
    "dev": "parcel watch resources/public/cljdoc.html --dist-dir resources-compiled/public/out --log-level verbose",
    "build": "parcel build resources/public/cljdoc.html --dist-dir resources-compiled/public/out --log-level info",
    "typecheck": "npx tsc --watch",
    "eslint": "eslint ."
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "elasticlunr": "^0.9.5",
    "fuzzysort": "^3.1.0",
    "idb": "^8.0.0",
    "preact": "^10.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@parcel/packager-xml": "^2.13.0",
    "@parcel/transformer-image": "^2.13.0",
    "@parcel/transformer-xml": "^2.13.0",
    "@types/elasticlunr": "^0.9.9",
    "@types/eslint__js": "^8.42.3",
    "@types/lunr": "^2.3.7",
    "eslint": "^9.14.0",
    "parcel": "^2.13.0",
    "parcel-namer-custom": "^0.2.0",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "parcel-resolver-ignore": "^2.1.5",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "svgo": "^3.3.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "staticFiles": {
    "staticPath": "resources/public/static"
  },
  "parcelIgnore": [
    "opensearch.xml"
  ],
  "@parcel/transformer-css": {
    "errorRecovery": true
  },
  "parcel-namer-custom": {
    ".css$": "[name].[hash].[ext]"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "react/jsx-runtime": "preact/jsx-runtime",
    "react/jsx-dev-runtime": "preact/jsx-dev-runtime",
    "preact/jsx-dev-runtime": "preact/jsx-runtime"
  }
}
